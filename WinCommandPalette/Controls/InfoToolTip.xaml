<UserControl x:Class="WinCommandPalette.Controls.InfoToolTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinCommandPalette.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="16" d:DesignWidth="16"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Image x:Name="gitHubLogo" Source="pack://application:,,,/WinCommandPalette;component/Resources/Info.png">
        <Image.ToolTip>
            <ToolTip Style="{StaticResource InfoToolTipStyle}">
                <TextBlock Text="{Binding Text}" Margin="5" Foreground="Black" FontSize="12" FontFamily="Calibri" MaxWidth="300" TextWrapping="Wrap"/>
            </ToolTip>
        </Image.ToolTip>
    </Image>
</UserControl>
