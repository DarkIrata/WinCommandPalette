<UserControl x:Class="WinCommandPalette.Controls.LicenseInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinCommandPalette.Controls"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel>
        <TextBlock x:Name="ProjectText" Text="{Binding Project, StringFormat='Project: {0}'}" FontWeight="SemiBold" TextWrapping="Wrap" Foreground="#2a2a2a" FontFamily="Calibri" FontSize="14"/>
        <TextBlock Text="{Binding Copyright, StringFormat='Copyright: {0}'}" TextWrapping="Wrap" Foreground="#2a2a2a" FontFamily="Calibri" FontSize="14"/>
        <TextBlock x:Name="LicenseText" Text="{Binding LicenseType, StringFormat='License {0}'}" TextWrapping="Wrap" Foreground="#2a2a2a" FontFamily="Calibri" FontSize="14"/>
    </StackPanel>
</UserControl>